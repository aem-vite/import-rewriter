{
  "author": "Chris Shaw <me@cshaw.xyz>",
  "description": "Dynamic imports transformer and CSS path rewriter for Vite when using Adobe Experience Manager",
  "homepage": "https://aemvite.dev/guide/front-end/dynamic-imports/",
  "license": "Apache-2.0",
  "name": "@aem-vite/import-rewriter",
  "repository": {
    "type": "git",
    "url": "https://github.com/aem-vite/import-rewriter"
  },
  "bugs": {
    "url": "https://github.com/aem-vite/import-rewriter/issues"
  },
  "version": "9.0.0",
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0",
    "pnpm": ">= 8.5"
  },
  "keywords": [
    "aem",
    "vite",
    "rollup",
    "dynamic-import",
    "dynamic",
    "import",
    "build-tools"
  ],
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "import": {
      "default": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "require": {
      "default": "./lib/index.cjs",
      "types": "./lib/index.d.cts"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --ext .ts 'src/**'",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "es-module-lexer": "^1.4.1",
    "magic-string": "^0.30.7",
    "rollup": "^4.12.0",
    "vite": "^7.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@commitlint/types": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.16.4",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jiti": "^2.4.2",
    "prettier": "^3.2.5",
    "semantic-release": "^23.1.1",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  }
}
